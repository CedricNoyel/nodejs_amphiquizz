<!DOCTYPE html>
<html>
    <head>
        <%- include('./partials/head'); %>
    </head>

    <body id="login">
		<div class="register">
			<button onclick="location.href='/register';">Cr√©er un compte</button>
		</div>

        <img src="img/logoAQ.png" alt="Logo" class="logo">
        <form action='/login' method='POST'>
            <div class="group">
                <input class="textField" name="login" type="text" id="login" required>
                <span class="highlight"></span>
                <span class="bar"></span>
                <label>Login</label>
            </div>

            <div class="group">
                <input class="textField" name="mdp" type="password" id="mdp" required>
                <span class="highlight"></span>
                <span class="bar"></span>
                <label>Mot de passe</label>
            </div>
            
            <div class="connexion">
                <input type="submit" value="Connexion" />
            </div>
            <p id="erreurLogin"></p>

        </form>
    </body>
</html>

<script>

    // If login or password wrong
    var erreur = <%- JSON.stringify(erreur) %>;
    if (erreur){
        notif("Les identifiants sont incorrects", "#E74C3C");
        $('#erreurLogin').append('Les identifiants sont incorrects');
    }


</script>